{
  "name": "vscode-typescript-dev",
  "displayName": "TSC Dev",
  "description": "An extension for working in the TypeScript codebase",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/orta/vscode-typescript-dev"
  },
  "publisher": "Orta",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/src/compiler/checker.ts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "tsDev.baselines",
          "name": "Changed Baselines"
        }
      ]
    },
    "languages": [
      {
        "id": "ts-symbols",
        "extensions": [
          ".symbols"
        ]
      },
      {
        "id": "ts-types",
        "extensions": [
          ".types"
        ]
      }
    ],
    "grammars": [
      {
        "language": "ts-symbols",
        "scopeName": "source.ts-symbols",
        "path": "./syntaxes/ts-symbols.tmLanguage.plist"
      },
      {
        "language": "ts-types",
        "scopeName": "source.ts-types",
        "path": "./syntaxes/ts-types.tmLanguage.plist"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "tsDev.openDiffTool",
          "when": "view == tsDev.baselines",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "tsDev.openTestShort",
          "when": "view == tsDev.baselines && viewItem == edited",
          "group": "inline"
        },
        {
          "command": "tsDev.openReferenceShort",
          "when": "view == tsDev.baselines && viewItem == edited",
          "group": "inline"
        },
        {
          "command": "tsDev.openDiffShort",
          "when": "view == tsDev.baselines && viewItem == edited",
          "group": "inline"
        },
        {
          "command": "tsDev.openTestShort",
          "when": "view == tsDev.baselines && viewItem == edited"
        },
        {
          "command": "tsDev.openReferenceShort",
          "when": "view == tsDev.baselines && viewItem == edited"
        },
        {
          "command": "tsDev.openDiffShort",
          "when": "view == tsDev.baselines && viewItem == edited"
        },
        {
          "command": "tsDev.copyPath",
          "when": "view == tsDev.baselines && viewItem == edited"
        }
      ]
    },
    "commands": [
      {
        "command": "tsDev.openDiffTool",
        "title": "Difftool",
        "shortTitle": "Gulp Diff"
      },
      {
        "command": "tsDev.openTestShort",
        "title": "Test"
      },
      {
        "command": "tsDev.openReferenceShort",
        "title": "Ref"
      },
      {
        "command": "tsDev.openDiffShort",
        "title": "Diff"
      },
      {
        "command": "tsDev.copyPath",
        "title": "Copy Path"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "jest"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.36.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.12.1",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@types/jest": "^26.0.23",
    "esbuild": "^0.12.5",
    "esbuild-jest": "^0.5.0",
    "jest": "^27.0.3"
  },
  "prettier": {
    "printWidth": 140
  }
}
